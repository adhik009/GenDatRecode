## The function is currently defined as
function (gendat.mat, P1.call)
{
    for (i in 1:nrow(gendat.mat)) {
        for (j in 4:ncol(gendat.mat)) {
            if (gendat.mat[i, j] == gendat.mat[i, 3]) {
                gendat.mat[i, j] <- P1.call
            }
        }
    }
    return(gendat.mat)
  }
}
